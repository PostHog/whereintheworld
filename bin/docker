#!/bin/sh
set -e

python manage.py migrate
python manage.py cities --import=all
gunicorn backend.wsgi \
    --bind 0.0.0.0:${PORT:-8000} \
    --log-file - \
    --log-level info \
    --access-logfile - \
    --worker-tmp-dir /dev/shm \
    --workers=2 \
    --threads=4 \
    --worker-class=gthread
